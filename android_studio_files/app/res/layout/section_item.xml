<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/cardView"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="4dp"
    app:cardCornerRadius="8dp"
    app:cardElevation="4dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="12dp">

        <TextView
            android:id="@+id/tvCurrentIndicator"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="CURRENT SEMESTER"
            android:textColor="@android:color/holo_blue_dark"
            android:textStyle="bold"
            android:visibility="gone" />

        <TextView
            android:id="@+id/tvCourseInfo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="COMP1010: Computing I"
            android:textSize="18sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tvSectionInfo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:text="Section: 001" />

        <TextView
            android:id="@+id/tvTermInfo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:text="Spring 2025" />

        <TextView
            android:id="@+id/tvSchedule"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:text="MWF 11:00-11:50" />

        <TextView
            android:id="@+id/tvLocation"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:text="Olsen Hall 301" />

        <TextView
            android:id="@+id/tvEnrollment"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text="Enrollment: 10 students"
            android:textStyle="bold" />

    </LinearLayout>
</androidx.cardview.widget.CardView>